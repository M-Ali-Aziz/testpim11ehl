<div class="container-fluid mx-0 px-0 nav-undecorated">
    <div id="{{ id }}" class="carousel slide" data-ride="carousel" data-pause="false">
        <ol class="carousel-indicators">
            {% for i in 0..(slides-1) %}
                <li data-target="{{ '#'~id }}" data-slide-to="{{ i }}" class="{{ loop.first ? 'active' }}">
                    <span class="sr-only"></span>
                </li>
            {% endfor %}
        </ol>
        <div class="carousel-controls-container">
            <div class="carousel-controls">
                <div class="carousel-controls-play"></div>
                <div class="carousel-controls-pause"></div>
            </div>
        </div>
        <div class="carousel-inner">
            {% for i in pimcore_iterate_block(pimcore_block('carousel-item')) %}
                <div class="carousel-item {{ subSiteClass ?? '' }} {{ loop.first ? 'active' }}">
                    <a href="{{ pimcore_link('link').href }}" class="nav-block h-100">
                        <div class="carousel-img-container">
                            <img src="{{ pimcore_image('image').src }}" alt="{{ pimcore_link('link').text }}" class=" carousel-img">
                        </div>
                        <div class="carousel-caption {{ subSiteCaption ?? '' }}">
                            <div class="container">
                                <p>
                                    <span class="a nav-block-link">
                                        {{ pimcore_link('link').text }}&nbsp;
                                        <i class="fal fa-chevron-circle-right fa-sm"></i>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="{{ '#'~id }}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
        </a>
        <a class="carousel-control-next" href="{{ '#'~id }}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
        </a>
    </div>
</div>
