{% include 'Areas/masonry-a/_masonry.html.twig' %}

<div class="container mason">
    <div class="masonry-container masonry-container-2by1">
        <div class="masonry masonry-wide masonry-cols">
            <div class="masonry-col masonry-col-55">
                <div class="masonry-row  masonry-row-65">
                    <div class="masonry-tile">
                        {% if editmode %}
                            <div class="nav-block-stone-50" style="border: dashed #4d4c44 1px;">
                                <div class="linktext m-0 pt-4 px-4">Video fr√•n YouTube</div>
                                <div class="pl-4 pt-0">
                                    <div class="meta"><strong>Ange YouTube-ID:</strong></div>
                                    <span class="meta">{{ pimcore_input('id', {'width': 180}) }}</span>
                                </div>
                            </div>
                        {% else %}
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe class="embed-responsive-item"
                                        src="{{ 'https://www.youtube.com/embed/'~pimcore_input('id') }}"
                                        allowfullscreen></iframe>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="masonry-row masonry-row-35">
                    <div class="masonry-tile">
                        {% if editmode %}
                            <div class="{{ pimcore_select('color').data }}" style="border: dashed #4d4c44 1px;">
                                <div class="pl-4 pt-3">
                                    {{ pimcore_select('color', {
                                        'reload': true,
                                        'store': colorStore
                                    }) }}
                                </div>
                                <div class="linktext m-0 py-0 px-4">
                                    {{ pimcore_link('masonryTileLink') }}
                                </div>
                                <div class="px-4 py-2">
                                    {{ pimcore_textarea('masonryTileText', {
                                        'nl2br': true,
                                        'height': 80
                                    }) }}
                                </div>
                            </div>
                        {% else %}
                            <a href="{{ pimcore_link('masonryTileLink').href }}"
                               class="nav-block {{ pimcore_select('color').data }}"
                               aria-label="{{ pimcore_link('masonryTileLink').text }}">
                                <div class="p-3 p-lg-5">
                                    <h2 class="h1">
                                        <span class="a nav-block-link">
                                            {{ pimcore_link('masonryTileLink').text }}&nbsp;
                                            <i class="fal fa-chevron-circle-right fa-sm"></i>
                                        </span>
                                    </h2>
                                    <p>
                                        {{ pimcore_textarea('masonryTileText', {
                                            'nl2br': true
                                        }) }}
                                    </p>
                                </div>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="masonry-col masonry-col-45">
                {% for i in 0..1 %}
                    <div class="masonry-row masonry-row-50">
                        <div class="masonry-tile masonry-tile-lg">
                            {% if editmode %}
                                <div class="masonry-tile-img">
                                    <div class="masonry-tile-img-bg">
                                        {{ pimcore_image('image-'~loop.index0, {
                                            'hidetext': true
                                        }) }}
                                    </div>
                                    <div class="masonry-tile-img-content">
                                        <div class="blockline">
                                            <div class="linktext">
                                                {{ pimcore_link('masonryTileLink-'~loop.index0) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <a href="{{ pimcore_link('masonryTileLink-'~loop.index0).href }}"
                                   class="nav-block masonry-tile-img">
                                    <div class="masonry-tile-img-bg">
                                        <img src="{{ pimcore_image('image-'~loop.index0).src }}"
                                             alt="{{ pimcore_link('masonryTileLink-'~loop.index0).text }}">
                                    </div>
                                    <div class="masonry-tile-img-content">
                                        <div class="blockline">
                                            <h2 class="h1">
                                                <span class="a nav-block-link">
                                                    {{ pimcore_link('masonryTileLink-'~loop.index0).text }}&nbsp;
                                                    <i class="fal fa-chevron-circle-right fa-sm"></i>
                                                </span>
                                            </h2>
                                        </div>
                                    </div>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
