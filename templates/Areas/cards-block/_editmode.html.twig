<div class="row my-8">
    <div class="col-12 text-center">
        <h2 class="h1">{{ pimcore_input('heading') }}</h2>
        <p>{{ pimcore_textarea('beskrivning') }}</p>
        <div class="mt-5">
            {% for i in 1..3 %}
                <div class="btn btn-outline-dark mx-1 mb-3">
                    {{ pimcore_link('button'~i) }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<div class="row">
    {% for i in 1..3 %}
        <div class="col-12 col-md-6 col-lg-4 mb-3 mx-auto">
            <span class="card p-2">
                {{ pimcore_image('image'~i, {'class': 'card-img-top'}) }}
                <div class="card-body">
                    <h2 class="card-title mt-0">{{ pimcore_input('rubrik'~i) }}</h2>
                    <p class="card-text">{{ pimcore_textarea('text'~i) }}</p>
                    {{ pimcore_link('readmore'~i) }}
                </div>
            </span>
        </div>
    {% endfor %}
</div>
