<div class="row my-8">
    <div class="col-12 text-center">
        {% if not pimcore_input('heading').empty %}
            <h2 class="h1">{{ pimcore_input('heading').data }}</h2>
        {% endif %}
        {% if not pimcore_textarea('beskrivning').empty %}
            <p class="h1">{{ pimcore_input('beskrivning').data }}</p>
        {% endif %}
        <div class="mt-5">
            {% for i in 1..3 %}
                {% if not pimcore_link('button'~i).empty %}
                    <a href="{{ pimcore_link('button'~i).href }}" class="btn btn-outline-dark mx-1 mb-3">
                        {{ pimcore_link('button'~i).text }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
<div class="row">
    {% for i in 1..3 %}
        <div class="col-12 col-md-6 col-lg-4 mb-3 mx-auto">
            <a href="{{ pimcore_link('readmore'~i).href }}" class="card p-2 nav-block">
                {{ pimcore_image('image'~i, {'class': 'card-img-top'}) }}
                <div class="card-body">
                    <h2 class="card-title mt-0">{{ pimcore_input('rubrik'~i) }}</h2>
                    <p class="card-text">{{ pimcore_textarea('text'~i) }}</p>
                    <div class="nav-block-link">
                        {{ pimcore_link('readmore'~i).text }}&nbsp;
                        <i class="fal fa-chevron-circle-right fa-lg"></i>
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>
