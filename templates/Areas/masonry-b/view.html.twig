{% include 'Areas/masonry-a/_masonry.html.twig' %}

<div class="container mason">
    <div class="masonry-container masonry-container-4by3">
        <div class="masonry masonry-cols">
            <div class="masonry-col masonry-col-45">
                {% for i in 0..1 %}
                    <div class="masonry-row masonry-row-50">
                        <div class="masonry-tile masonry-tile">
                            {% if editmode %}
                                <div class="masonry-tile-img">
                                    <div class="masonry-tile-img-bg">
                                        {{ pimcore_image('image-'~loop.index0, {
                                            'hidetext': true
                                        }) }}
                                    </div>
                                    <div class="masonry-tile-img-content">
                                        <div class="blockline">
                                            <div class="linktext">
                                                {{ pimcore_link('masonryTileLink-'~loop.index0) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {% else %}
                                <a href="{{ pimcore_link('masonryTileLink-'~loop.index0).href }}"
                                   class="nav-block masonry-tile-img">
                                    <div class="masonry-tile-img-bg">
                                        <img src="{{ pimcore_image('image-'~loop.index0).src }}"
                                             alt="{{ pimcore_link('masonryTileLink-'~loop.index0).text }}">
                                    </div>
                                    <div class="masonry-tile-img-content">
                                        <div class="blockline">
                                            <h2 class="h1">
                                                <span class="a nav-block-link">
                                                    {{ pimcore_link('masonryTileLink-'~loop.index0).text }}&nbsp;
                                                    <i class="fal fa-chevron-circle-right fa-sm"></i>
                                                </span>
                                            </h2>
                                        </div>
                                    </div>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="masonry-col masonry-col-55">
                {% for i in 0..1 %}
                    <div class="masonry-row masonry-row-35">
                        <div class="masonry-tile masonry-tile">
                            {% if editmode %}
                                <div class="masonry-tile-img">
                                    <div class="masonry-tile-img-bg">
                                        {{ pimcore_image('image1-'~loop.index0, {
                                            'hidetext': true
                                        }) }}
                                    </div>
                                    <div class="masonry-tile-img-content">
                                        <div class="blockline">
                                            <div class="linktext">
                                                {{ pimcore_link('masonryTileLink1-'~loop.index0) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {% else %}
                                <a href="{{ pimcore_link('masonryTileLink1-'~loop.index0).href }}"
                                   class="nav-block masonry-tile-img">
                                    <div class="masonry-tile-img-bg">
                                        <img src="{{ pimcore_image('image1-'~loop.index0).src }}"
                                             alt="{{ pimcore_link('masonryTileLink1-'~loop.index0).text }}">
                                    </div>
                                    <div class="masonry-tile-img-content">
                                        <div class="blockline">
                                            <h2 class="h1">
                                                <span class="a nav-block-link">
                                                    {{ pimcore_link('masonryTileLink1-'~loop.index0).text }}&nbsp;
                                                    <i class="fal fa-chevron-circle-right fa-sm"></i>
                                                </span>
                                            </h2>
                                        </div>
                                    </div>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}

                <div class="masonry-row masonry-row-30">
                    <div class="masonry-tile">
                        {% if editmode %}
                            <div class="{{ pimcore_select('color4').data }}" style="border: dashed #4d4c44 1px;">
                                <div class="pl-4 pt-3">
                                    {{ pimcore_select('color4', {
                                        'reload': true,
                                        'store': colorStore
                                    }) }}
                                </div>

                                <div class="linktext m-0 py-0 px-4">
                                    {{ pimcore_link('masonryTileLink4') }}
                                </div>

                                <div class="px-4 py-2">
                                    {{ pimcore_textarea('masonryTileText4', {
                                        'nl2br': true,
                                        'height': 110
                                    }) }}
                                </div>
                            </div>

                        {% else %}
                            <a href="{{ pimcore_link('masonryTileLink4').href }}"
                               class="nav-block {{ pimcore_select('color4').data }}"
                               aria-label="{{ pimcore_link('masonryTileLink4').text }}">
                                <div class="p-3 p-lg-5">
                                    <h2 class="h1">
                                        <span class="a nav-block-link">
                                            {{ pimcore_link('masonryTileLink4').text }}&nbsp;
                                            <i class="fal fa-chevron-circle-right fa-sm"></i>
                                        </span>
                                    </h2>
                                    <p>
                                        {{ pimcore_textarea('masonryTileText4', {
                                            'nl2br': true
                                        }) }}
                                    </p>
                                </div>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
