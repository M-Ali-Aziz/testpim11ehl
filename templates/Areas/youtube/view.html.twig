{% if document.property('bootstrap') %}
    {% if not pimcore_input('heading').empty %}
        <h2>{{ pimcore_input('heading').data }}</h2>
    {% endif %}
    {% if not pimcore_input('id').empty %}
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item"
                    src="https://www.youtube.com/embed/{{ pimcore_input('id').data }}"
                    allowfullscreen></iframe>
        </div>
    {% endif %}
{% else %}
    {% if not pimcore_input('heading').empty %}
        <h2>{{ pimcore_input('heading').data }}</h2>
    {% endif %}
    {% if not pimcore_input('id').empty %}
        <iframe width="{{ width ?? '' }}" height="{{ height ?? '' }}"
                src="https://www.youtube.com/embed/{{ pimcore_input('id').data }}?rel=0&amp;showinfo=0"
                frameborder="0" allowfullscreen></iframe>
    {% endif %}
{% endif %}
